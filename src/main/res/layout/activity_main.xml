<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris_oscuro">


    <!-- Título SFI-TAP -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SFI-TAP"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:background="@color/verde"
        android:padding="10dp"
        android:gravity="center" />

    <!-- Imagen del logo del taller -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/logo_taller"
        android:scaleType="fitXY" />

    <!-- Botón Registro -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageViewRegistro"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:onClick="onClickRegistro"
            android:src="@drawable/boton_registro" />

        <TextView
            android:id="@+id/textViewRegistro"
            android:layout_width="228dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="Registro"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botón Ingresar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageViewLogin"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:onClick="onClickIngresar"
            android:src="@drawable/boton_ingresar" />

        <TextView
            android:id="@+id/textViewLogin"
            android:layout_width="231dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="Ingresar"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Botón Nosotros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnNosotros"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:onClick="onClickNosotros"
            android:src="@drawable/boton_nosotros" />

        <TextView
            android:layout_width="229dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="Nosotros"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Botón Contacto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnContacto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:onClick="onClickContacto"
            android:src="@drawable/boton_contacto" />

        <TextView
            android:layout_width="228dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="Contacto"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Botón Configuración -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/btnConfiguracion"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:onClick="onClickConfiguracion"
            android:src="@drawable/boton_configuracion" />

        <TextView
            android:layout_width="294dp"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="Configuracion"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
